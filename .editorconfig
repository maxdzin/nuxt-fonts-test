# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{html, css, scss, less, js, vue, svg}]
indent_size = 2

[*.{yml, yaml, sh, conf}]
indent_size = 2
